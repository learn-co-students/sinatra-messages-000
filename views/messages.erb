<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">
      <%
        # for each message in @messages
        # render the template below
        # filling the content from
        # the message
      %>
    <% @messages.each do |msg| %>
      <div class="message">
        <div class="to">
          <%=  msg.to %>
        </div>
        <div class="from">
          <%= msg.from %>
        </div>
        <div class="content">
          <%= msg.content %>
        </div>
        <div class="time">
          <%= msg.created_at %>
        </div>
      </div>
      <% end %>
    </div>

  </body>
</html>
